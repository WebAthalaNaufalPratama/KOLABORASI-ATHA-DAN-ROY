def usaha():
    print("================================")
    print("|| APLIKASI PERENCANAAN USAHA ||")
    print("================================")
    print("")
    print("Silahkan Pilih Menu!")
    print("1. Menghitung Perencananaan Membuka Usaha")
    print("2. Menghitung Keuntungan dari Usaha")
    menu = int(input("Masukan Pilihan = "))
    if menu == 1 :
        alat()
    elif menu == 2 :
        Untung()
    else:
        print("Bilangan Yang anda masukan salah")
def alat():
    nmalat = input("Masukan Nama Alat yang dibutuhkan =")
    jumalat = int(input("Masukan Harga Alat ="))
    bahan()
    
def bahan():
    nmbahan = input("Masukan Nama Bahan Yang dibutuhkan = ")
    jumbahan = int(input("Masukan Harga Bahan ="))
    lanjut()
    
def lanjut():
    listrik = int(input("Masukan Uang Listrik = "))
    Air = int(input("Masukan Uang Air = "))
    karyawan = int(input("Masukan Jumlah Karyawan yang akan dipekerjakan ="))
    uangkaryawan = int(input("Masukan Gaji Karyawan Yang akan dipekerjakan ="))
    toko = int(input("Masukan Harga Kontrakan ="))
    rumus()
    
def rumus():
    global Jumalat, Jumbahan, listrik, Air, karyawan, uangkaryawan, toko
    jumtot = Jumalat + Jumbahan
    self.tkaryawan = self.karyawan * self.uangkaryawan
    self.modal = jumtot + self.listrik + self.Air + self.tkaryawan + self.toko
    print("")
    print("")
    print("=> Jadi Modal yang diperlukan adalah", self.modal)       
    perulangan
    
def perulangan():
    ulang = input ("Apakah anda ingin Mengulang lagi ?[y/n]")
    if ulang == "y" or ulang == "Y" :
        usaha()
    elif ulang == "n" or ulang == "N":
        exit()
        
def Untung():
    print("=========================================")
    print("||APLIKASI MENGHITUNG UNTUNG RUGI USAHA||")
    print("=========================================")
    print("Pilih Waktu Usaha yang akan di hitung!!")
    print("1. Hari")
    print("2. Minggu")
    print("3. Bulan")
    jenjang = int(input("Masukan Pilihan Anda ="))
    if jenjang == 1:
        self.waktu = int(input("Waktu Usaha Yang Akan anda Hitung (Hari) =")) 
        barang()

    elif jenjang == 2:
        self.waktu = int(input("Waktu Usaha Yang Akan anda Hitung (Tahun) =")) 
        barang2()

    elif jenjang == 3:
        self.waktu = int(input("Waktu Usaha Yang Akan anda Hitung (Bulan) =")) 
        baarng3()

    else :
        print("Maaf Bilangan Yang Anda Masukan Salah")
    

def barang():
    toko = input("Nama Toko : =")
    Jual = int(input("Masukan Total Penjualan ="))
    modal = int(input("Masukan Modal Yang dikeluarkan (hari)="))
    karyawan = int(input("masukan Jumlah Karyawan ="))
    gajikaryawan = int(input("Masukan Gaji Karyawan = "))
    rumus()

def barang2():
    toko = input("Nama Toko =")
    Jual = int(input("Masukan Total Penjualan ="))
    modal = int(input("Masukan Modal Yang dikeluarkan (hari)="))
    karyawan = int(input("masukan Jumlah Karyawan ="))
    gajikaryawan = int(input("Masukan Gaji Karyawan = "))
    rumus1()     

def barang3(self):
    toko = input("Nama Toko =")
    Jual = int(input("Masukan Total Penjualan ="))
    modal = int(input("Masukan Modal Yang dikeluarkan (hari)="))
    karyawan = int(input("masukan Jumlah Karyawan ="))
    gajikaryawan = int(input("Masukan Gaji Karyawan = "))
    rumus2()

def rumus():
    global waktu, nmJual, Jual, modal, karyawan, gajikaryawan
    tmodal = self.modal * self.waktu
    tkaryawan = self.karyawan * self.gajikaryawan
    total = self.tmodal + self.tkaryawan
    tola = self.Jual - self.total
    rugi = self.total - self.Jual
    cetak()

def rumus1():
    global waktu, nmJual, Jual, modal, karyawan, gajikaryawan
    twaktu = self.waktu * 7 
    tmodal = self.modal * self.twaktu
    tkaryawan = self.karyawan * self.gajikaryawan
    total = self.tmodal + self.tkaryawan
    tola = self.Jual - self.total
    rugi = self.total - self.Jual
    cetak()

def rumus2():
    global waktu, nmJual, Jual, modal, karyawan, gajikaryawan
    twaktu = self.waktu * 30
    tmodal = self.modal * self.waktu
    tkaryawan = self.karyawan * self.gajikaryawan
    total = self.tmodal + self.tkaryawan
    tola = self.Jual - self.total
    rugi = self.total - self.Jual
    cetak()

def cetak():
    print ("=========================================")
    print ("||   Aplikasi MENGHITUNG UNTUNG RUGI   ||")
    print ("=========================================")
    print ("")
    print ("| Nama Toko/Usaha : ", self.toko )
    print ("| Jumlah Karyawan = ", self.karyawan)
    print ("| Gaji Karyawan = ", self.gajikaryawan)
    print ("| Keuntungan = ", self.tola)
    print ("| Kerugian = ", self.rugi)
    print ("")
    if self.tola >= 0 :
        print("=============Selamat Usaha Anda Sukses=============")
    elif self.tola <= 0:
        print("==============Maaf Usaha Anda Akan Bangkrut================")
    perulangan()


def perulangan(self):
    ulang = input("Apakah anda ingin mengulang  lagi ? [y/n] ")
    if ulang == "y" or ulang == "Y" :
        usaha()
    elif ulang == "n" or ulang == "N" :
        exit()          

#Memanggil Fungsi  
usaha()
